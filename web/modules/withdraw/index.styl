#area > .withdraw-bitcoin
    states entry review summary

    .entry, .review, .summary
        border solid 1px #ccc
        background-color #fafafa
        padding 1.5em 6em 2em 2em
        max-width 40em

    .review
        .actions
            margin-top 3em

    .control-label
        max-width 7.5em

    .controls
        margin-left 7.5em + 1.5em

    .amount
        input
            max-width 15em
            width 100%

    .submit
            width 100%
            max-width 15em

        .summary
            .status
                states requested processing completed cancelled updating

        .payment-details
            margin 3em 0 3em
            width auto

#area > .withdraw-email
    .transfer-form, .send-form, .send-confirmed
        border solid 1px #ccc
        background-color #fafafa
