#area > .auth-login
    max-width: 550px
    padding: 19px 0px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    .help-block
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-block
        visibility visible

    .new-user
        position relative
        top -15px

#area > .auth-register
    max-width: 550px
    padding: 19px 0px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    .register-form
        button
            width 300px

        input
            width 285px

        label
            font-weight bold

        h3
            margin-bottom 20px

    .help-block
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-block
        visibility visible

    .existing-container
        padding-top 1em

    .existing
        position relative
        top -15px

#area > .auth-verifyphone
    .code-form
        display none

#area > .auth-identity
    form
        margin-top 25px

        button[type="submit"]
            width 220px

#area > .auth-resetpassword
    .phone, .end
        display none

#area > .auth-norwaydeposit
    states finished

    .payment-details
        font-size 1.4em

        .row
            margin-top 2em

#area > .auth-cip
    states finished

.is-area-register
.is-area-login
.is-area-resetpassword
    > .top
        display none

    footer, hr
        display none

.is-area-register
.is-area-login
    background: url('img/registerbg.jpg')  no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

.is-area-verifyemail
.is-area-verifyphone
.is-area-norwaydeposit
.is-area-cip
    footer, .top
        display none
